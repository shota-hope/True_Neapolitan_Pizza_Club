<div class='container'>
  <div class='row'>
    <div class='bg-white rounded mt-3'>
      <p class='font-weight-bold float-left mt-3 ml-3'>真のナポリピッツァ部員</p>
      <% if current_user?(@user) %>
        <%= link_to '編集', edit_user_path(current_user), class: 'btn btn-success float-right mt-3 mr-3' %>
      <% end %>
      </div>
      <div class='col-12 col-sm-5 col-md-3 mb-3 bg-white text-center rounded'>
        <%= image_tag @user.avatar.url, class: 'rounded-circle mt-2 ml-1',size: '130x130' %>
        <p class='text-center font-weight-bold pt-2'><%= @user.name %>(<%= user_status(@user) %>)</p>
      <% if current_user?(@user) %>
        <p><%= link_to '訪問店舗確認'"(#{@user.visited_shops.count}店舗達成)", visits_shops_path,'data-turbolinks': false, class: 'text-dark'%></p>
      <% end %>
      </div>
      <div class='col-12 col-sm-7 col-md-9 pt-3 mb-3 bg-white rounded'>
        <p class='font-weight-bold mb-0'>プロフィール</p><br>
        <p class ='text-jsutify text-left'><%= simple_format(h(@user.profile)) %></p>
      </div>
    </div>
    <h4 class='my-3'>投稿一覧</h4>
    <%= render 'posts/post' %>
  </div>
</div>
