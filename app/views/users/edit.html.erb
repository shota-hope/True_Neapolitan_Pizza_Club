<div class="container">
  <div class="row form-height">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1 class='mt-3'><%= t '.title' %></h1>
      <%= form_with model: @user, local: true do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
          <%= f.label :profile %>
          <%= f.text_area :profile, class: 'form-control', size: "70x5" %>
        </div>
        <!--プロフィール画像を追加する項目-->
        <%= f.submit (t 'users.edit.update'), class: 'btn btn-dark' %>
      <% end %>
    </div>
  </div>
</div>
