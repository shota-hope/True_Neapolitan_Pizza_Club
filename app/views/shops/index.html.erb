<div class="container pt-3">
  <div class="row">
    <div class='col py-3'>
      <%= render 'shared/search_form', url: shops_path %>
    </div>
    <% if @shops.present? %>
      <div class='table-responsive'>
        <table class="table table-striped table-dark table-hover">
          <thead>
            <tr>
              <th scope="col"><%= (t 'shops.index.name') %></th>
              <th scope="col"><%= (t 'shops.index.address') %></th>
            </tr>
          </thead>
          <% @shops.each do |shop| %>
          <tbody>
            <tr>
              <td scope="row"><%= link_to shop.name, shop_path(shop), 'data-turbolinks': false, class: 'text-white' %></td>
              <td><%= shop.address %></td>
            </tr>

          </tbody>
          <% end %>
        </table>
      <% else %>
        <h3 class='font-weight-bold col-12'><%= (t 'shops.index.search_result') %></h3>
      <% end %>
    </div>
  </div>
</div>
