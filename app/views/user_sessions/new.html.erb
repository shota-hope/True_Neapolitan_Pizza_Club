<div class="container">
  <div class="row">
    <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1 class='my-3'><%= t '.title' %></h1>
      <%= form_with url: login_path, local: true do |f| %>
        <div class="form-group">
          <%= f.label :email, User.human_attribute_name(:email) %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password, User.human_attribute_name(:password) %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="actions">
          <%= f.submit (t 'defaults.login'), class: 'btn btn-dark' %>
        </div>
      <% end %>
      <div class='text-center login-height my-4'>
        <%= link_to (t '.to_register_page'), new_user_path, class: 'my-4' %>
      </div>
        <%= link_to 'Login with Twitter', auth_at_provider_path(provider: :twitter) %>
    </div>
  </div>
</div>
