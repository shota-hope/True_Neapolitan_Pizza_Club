<div class="container">
  <div class="row">
    <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1 class='my-3'>ログイン</h1>
      <%= form_with url: login_path, local: true do |f| %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="actions">
          <%= f.submit 'ログイン', class: 'btn btn-dark' %>
        </div>
      <% end %>
      <div class='text-center login-height my-4'>
        <%= link_to '入部される方は登録ページへ', new_user_path, class: 'my-4' %>
      </div>
    </div>
  </div>
</div>
